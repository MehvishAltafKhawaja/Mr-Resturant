@{
}
@model Intern

<h2>Edit Profile</h2>


<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="full-control"/>
    </div>


    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input  asp-for="Email" class="full-control"/>
    </div>


    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="full-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Address"> Address</label>
        <input asp-for="Address" class="full-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

</form>
